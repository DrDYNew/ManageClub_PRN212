<Window x:Class="ManageClub_PRN212.WPF.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageClub_PRN212.WPF"
        mc:Ignorable="d"
        Title="Register" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Register" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Name(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Name="txtName"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Email(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Name="txtEmail"/>



        <Label Grid.Row="3" Grid.Column="0" Content="Date Of Birth(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <DatePicker Grid.Row="3" Grid.Column="1" Margin="5" Name="txtDob"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Phone(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Name="txtPhone"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Address(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="5" Name="txtAddress"/>

        <Label Grid.Row="6" Grid.Column="0" Content="AvatarURL(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Name="txtAvatarURL"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Password(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <PasswordBox Grid.Row="7" Grid.Column="1" Margin="5" Name="txtPassword"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Re-password(*):" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <PasswordBox Grid.Row="8" Grid.Column="1" Margin="5" Name="txtRepassword"/>

        <Button Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Content="Submit" Name="btnSubmit" Width="100" HorizontalAlignment="Center" Margin="10" Click="btnSubmit_Click"/>

        <Grid Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Login" Name="tbLogin" HorizontalAlignment="Left" Width="100" Margin="28,35,0,-35" Grid.ColumnSpan="2" Click="tbLogin_Click"/>
            <Button Grid.Column="2" Content="Forgot password?" Name="tbForgotPassword" HorizontalAlignment="Center" Width="130" Margin="0,35,0,-35" Click="tbForgotPassword_Click"/>
        </Grid>
    </Grid>
</Window>
