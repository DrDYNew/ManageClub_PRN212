<Window x:Class="ManageClub_PRN212.WPF.EditClubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageClub_PRN212.WPF"
        mc:Ignorable="d"
        Title="ManageClub" Height="670" Width="450" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="12,0,12,0"/>
            <!-- Chỉ padding ngang -->
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="12,0,12,0"/>

            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="12,0,12,0"/>

            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Add New Club" FontSize="28" 
           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20" 
           Foreground="#333333"/>
            <TextBlock Text="Club Name" FontSize="14" 
                       Margin="0,0,0,5" Foreground="#666666"/>
            <TextBox Name="txtClubName"/>
            <TextBlock Text="Description" FontSize="14" 
                       Margin="0,0,0,5" Foreground="#666666"/>
            <TextBox Name="txtDescription" Height="75"/>
            <TextBlock Text="Established Date" FontSize="14" 
                       Margin="0,0,0,5" Foreground="#666666"/>
            <DatePicker Name="dpEstablishedDate"/>
            <TextBlock Text="President" FontSize="14" 
                       Margin="0,0,0,5" Foreground="#666666"/>
            <TextBox Name="txtPresident" Margin="0" TextChanged="txtPresident_TextChanged"/>
            <ComboBox Name="cbPresident"/>
            <TextBlock Text="Status" FontSize="14" 
                       Margin="0,0,0,5" Foreground="#666666"/>
            <ComboBox Name="cbStatus"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" HorizontalAlignment="Left" Margin="0 0 100 0"
                    Width="80" Height="30" Background="#EF5350" 
                    BorderBrush="#EF5350" Foreground="White" Name="btnSave" Click="btnSave_Click"/>
            <Button Content="Back" HorizontalAlignment="Right" Width="80" 
                    Height="30" Background="#2E7D32" BorderBrush="#2E7D32" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
